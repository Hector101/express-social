<% include _header %>
	
	<h2>Edit profile</h2>

	<form action="/edit" method="post" class="edit-form">
		<div class="form-group">
			<label for="firstname" class="control-label">First Name: </label>
			<input type="text" name="firstname" value="<%= currentUser.firstName || "" %>" class="form-control" placeholder="First Name">
		</div>
		<div class="form-group">
			<label for="surname" class="control-label">Last Name: </label>
			<input type="text" name="surname" value="<%= currentUser.lastName || "" %>" class="form-control" placeholder="First Name">
		</div>
		<div class="form-group">
			<label for="username" class="control-label">Username: </label>
			<input type="text" name="username" value="<%= currentUser.username || "" %>" class="form-control" placeholder="First Name">
		</div>
		<div class="form-group">
			<label for="bio" class="control-label">Bio Data: </label>
			<textarea name="bio" class="form-control" placeholder="Enter your biography"><%= currentUser.bio || "" %></textarea>
		</div>
		<div class="form-group">
			<div class="save-update">
				<div>
					<input type="submit" value="Update" class="btn btn-default">
				</div>
				<div>
					<a href="/users/<%= currentUser.username %>" class="btn btn-primary">save</a>
				</div>
			</div>
		</div>
	</form>


<% include _footer %>